extends layout

block content  
  link(rel='stylesheet', href='/stylesheets/login.css')
  .container(style='margin-top:40px')
    .row
      .col-sm-6.col-md-4.col-md-offset-4
        .panel.panel-default
          .panel-heading
            center
              strong  تسـجيل الدخول
          .panel-body
            form(role='form', action='#', method='POST')
              fieldset
                .row
                  .center-block
                    img.profile-img(src='/images/logo.jpeg', alt='')
                .row
                  .col-sm-12.col-md-10.col-md-offset-1
                    .form-group
                      .input-group
                        span.input-group-addon
                          i.glyphicon.glyphicon-user
                        input.form-control(placeholder='اسم المستخدم', name='loginname', type='text', autofocus='')
                    .form-group
                      .input-group
                        span.input-group-addon
                          i.glyphicon
                        input.form-control(placeholder='الرمز السري', name='password', type='password', value='')
                    .form-group
                      input.btn.btn-lg.btn-primary.btn-block(type='submit', value='تسجيل دخول')